{
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": [ "elm" ],
      "rootPatterns": [ "elm.json" ],
      "initializationOptions": {
        "elmAnalyseTrigger": "save" 
      }
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [ "elm" ],
  "diagnostic.displayByAle": true,
  "coc.preferences.jumpCommand": "drop",
  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "Ψ",
    "function": "ƒ",
    "reference": "渚",
    "constant": "",
    "method": "",
    "struct": "פּ",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "料",
    "unit": "",
    "event": "鬒",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": ""
  },
  "explorer": {
    "file.showHiddenFiles": true,
    "file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticWarning & 1][diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
    "icon.enableNerdfont": true,
    "icon.enableVimDevicons": false,
    "git": {
      "icon": {
        "status": {
          "modified": "+",
          "mixed": "±",
          "deleted": "﫧",
          "untracked": "",
          "ignored": "",
          "conflicted": "≇"
        },
        "rootStatus": {
          "modified": "+",
          "deleted": "﫧",
          "mixed": "±",
          "untracked": "",
          "ignored": "",
          "conflicted": "≇"
        }
     }
    },
    "keyMappings": {
      "global": {
        "k": "nodePrev",
        "j": "nodeNext",
        "gk": "expandablePrev",
        "gj": "expandableNext",

        "*": "toggleSelection",
        "<tab>": "actionMenu",

        "h": ["collapseRecursive",  "expand" ],
        "H": "gotoParent",
        "l": ["expandable?", ["expanded?", "collapse", "expand"] , "open"],
        "J": ["toggleSelection", "nodeNext"],
        "K": ["toggleSelection", "nodePrev"],
        "gl": "expandRecursive",
        "gh": "collapseRecursive",
        "o": "expandOrCollapse",
        "<cr>": ["expandable?", "cd", "open"],
        "e": "open",
        "i": "open:split",
        "S": "open:split:plain",
        "s": "open:vsplit",
        "t": "open:tab",
        "<bs>": "gotoParent",
        "gp": "preview:labeling",

        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",

        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",

        ".": "toggleHidden",
        "<c-r>": "refresh",

        "?": "help",
        "q": "quit",
        "<esc>": "esc",
        "X": "systemExecute",
        "gd": "listDrive",

        "f": "search",
        "F": "searchRecursive",

        "gf": "gotoSource:file",
        "gb": "gotoSource:buffer",

        "[[": "sourcePrev",
        "]]": "sourceNext",

        "[d": "diagnosticPrev",
        "]d": "diagnosticNext",

        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage"
      }
    }
  }
}
