# vim: filetype=muttrc

# Not much
set nm_default_uri="notmuch://$HOME/Mail"
set virtual_spoolfile = yes
virtual-mailboxes \
    "vINBOX"  "notmuch://?query=tag:inbox and NOT tag:archive and folder:INBOX"\
    "vYouWiN"  "notmuch://?query=tag:inbox and NOT tag:archive and folder:YouWin"\
    "vTech"  "notmuch://?query=tag:inbox and NOT tag:archive and folder:Tech"\
    "vRecruitment"  "notmuch://?query=tag:inbox and NOT tag:archive and folder:Recruitment"\
    "vALL"  "notmuch://?query=tag:inbox and NOT tag:archive"

bind index   S vfolder-from-query
