set mbox_type    = Maildir
set sendmail     = /usr/bin/msmtp
set pager_index_lines = 8

# Aptivate identity
set from 	     = marks@aptivate.org
set realname     = "Mark Skipper"
set signature    = ~/.aptivate-signature   
set hostname     = "aptivate.org"
my_hdr X-Homepage: http://aptivate.org/

set folder       = ~/Mail
set spoolfile    = "+Aptivate/INBOX"
set mbox         = "+Aptivate/Archive"
set postponed    = "+Aptivate/Drafts"
# set header_cache = ~/.mailcache/
unset record

mailboxes +Aptivate/INBOX +Aptivate/Tech +Aptivate/YouWin

# Sidebar
set sidebar_visible
set sidebar_width  = 25

# Composing
set include = yes

# Index view options
set sort           = threads

# Pager
ignore X-Google*
set wrap           = 140

# Take me directly to the editor, I'll edit stuff there
set fast_reply
set edit_headers   = yes

# HTML EMail
auto_view text/html
alternative_order text/plain text/html

# Addressbook
#
# Use little brother's database
set query_command="lbdbq %s"

# My aliases
set alias_file=~/.abook/muttaliases
source ~/.abook/muttaliases

# other stuff
source ~/.mutt/colours
source ~/.mutt/bindings
source ~/.mutt/macros
source ~/.mutt/notmuch
